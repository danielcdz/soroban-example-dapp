{
  "name": "soroban-example-dapp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "setup": "./initialize.sh ${NETWORK:-testnet} && npm install",
    "clean": "rm -rf .next .soroban .soroban-example-dapp",
    "reset": "npm run clean && npm run setup",
    "build:contracts": "./target/bin/stellar contract build",
    "bindings:crowdfund": "./target/bin/stellar contract bindings typescript --wasm ./target/wasm32-unknown-unknown/release/stellar_crowdfund_contract.wasm --id $(cat ./.soroban-example-dapp/crowdfund_id) --output-dir ./.soroban-example-dapp/crowdfund-contract --network $(cat ./.soroban-example-dapp/network) --overwrite",
    "bindings:abundance": "./target/bin/stellar contract bindings typescript --wasm ./target/wasm32-unknown-unknown/release/abundance_token.wasm --id $(cat ./.soroban-example-dapp/abundance_token_id) --output-dir ./.soroban-example-dapp/abundance-token --network $(cat ./.soroban-example-dapp/network) --overwrite",
    "bindings": "npm run bindings:crowdfund && npm run bindings:abundance",
    "preinstall": "npm run build:contracts && npm run bindings"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "1.1.1",
    "@stellar/freighter-api": "^2.0.0",
    "@stellar/stellar-sdk": "12.1.0",
    "abundance-token": "file:./.soroban-example-dapp/abundance-token",
    "crowdfund-contract": "file:./.soroban-example-dapp/crowdfund-contract",
    "humanize-duration": "^3.32.1",
    "moment": "^2.30.1",
    "next": "^14.2.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/humanize-duration": "^3.27.4",
    "@types/node": "20.14.9",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.2.4",
    "typescript": "5.5.3"
  },
  "engines": {
    "node": ">=18.19.0",
    "npm": ">=10.2.3"
  }
}
